{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chowda: app",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "uvicorn",
      "args": [
        "chowda:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--log-level",
        "debug"
      ],
      "jinja": false,
      "justMyCode": false
    },
    {
      "name": "Chowda: tests",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "pytest",
      "args": ["-v", "-n", "auto"],
      "jinja": false,
      "justMyCode": false
    }
  ]
}
